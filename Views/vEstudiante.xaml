<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="destradaS6A.Views.vEstudiante"
             Title="vEstudiante">
    <VerticalStackLayout>
        <Label 
            Text="Semana 6 Servicios Web"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <ListView x:Name="lvEstudiantes">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                        <StackLayout>//aqui los grid-2 gris una para la cabecera y otra para los datos
                            <Label x:Name="lblNombre" 
                                       Text="{Binding nombre}"/>
                                <Label x:Name="lblApellido" 
                                       Text="{Binding apellido}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

    </VerticalStackLayout>
</ContentPage>